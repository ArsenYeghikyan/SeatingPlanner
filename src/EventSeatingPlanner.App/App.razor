<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(EventSeatingPlanner.App.Shared.AppLayout)" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(EventSeatingPlanner.App.Shared.AppLayout)">
            <p>Страница не найдена.</p>
        </LayoutView>
    </NotFound>
</Router>
