@page "/login"

@using EventSeatingPlanner.App.Models
@using Microsoft.AspNetCore.Components.Forms

@inject EventSeatingPlanner.App.Services.AuthService AuthService
@inject NavigationManager Nav

<SectionCard Title="Вход" Subtitle="Используйте email и пароль для доступа">
    <EditForm Model="_form" OnValidSubmit="HandleLoginAsync" class="form">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form__row">
            <label>Email</label>
            <InputText @bind-Value="_form.Email" type="email" class="input" />
        </div>

        <div class="form__row">
            <label>Пароль</label>
            <InputText @bind-Value="_form.Password" type="password" class="input" />
        </div>

        <button class="button" type="submit" disabled="@_isBusy">
            @(_isBusy ? "Вход..." : "Войти")
        </button>

        @if (!string.IsNullOrWhiteSpace(_error))
        {
            <div class="alert">@_error</div>
        }
    </EditForm>
</SectionCard>

@code {
    private readonly LoginFormModel _form = new();
    private string? _error;
    private bool _isBusy;

    private async Task HandleLoginAsync()
    {
        if (_isBusy) return;

        _error = null;
        _isBusy = true;

        try
        {
            var request = new LoginRequest(_form.Email, _form.Password);
            await AuthService.LoginAsync(request);
            Nav.NavigateTo("/");
        }
        catch (Exception ex)
        {
            _error = $"Ошибка входа: {ex.Message}";
        }
        finally
        {
            _isBusy = false;
        }
    }
}
